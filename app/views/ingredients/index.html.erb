<h2>Ingredients</h2>

<table class="table table-striped">
  <tr>
    <th>Ingredient Name</th>
    <th>Actions</th>
  </tr>

  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= link_to 'Edit', edit_ingredient_path(ingredient.id) %> | <%= link_to 'Delete', ingredient_path(ingredient), method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
